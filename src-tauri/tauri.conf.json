{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ASGARDEX",
  "version": "1.41.5",
  "identifier": "org.thorchain.asgardex",
  "build": {
    "frontendDist": "../build/renderer",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "yarn dev:tauri",
    "beforeBuildCommand": "yarn build:tauri"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ASGARDEX",
        "width": 1200,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 720,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "base-uri": "'none'",
        "frame-ancestors": "'none'",
        "form-action": "'none'",
        "img-src": "'self' data: blob: https:",
        "style-src": "'self' 'unsafe-inline'",
        "script-src": "'self' 'wasm-unsafe-eval'",
        "worker-src": "'self' blob:",
        "connect-src": "'self' https: wss:"
      },
      "capabilities": ["default", "android", "ios", "mobile-safe-area"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
    "resources": ["ios/App/Assets.xcassets", "../resources"],
    "android": {
      "minSdkVersion": 26
    },
    "iOS": {
      "developmentTeam": "ABCDE12345",
      "bundleVersion": "1.41.5",
      "minimumSystemVersion": "15.0"
    }
  }
}
